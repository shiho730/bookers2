
<div class="row">
<div class="sidebar">
  <div class="col-xs-3">
    <h2>User info</h2>

    <div class="user-edit-image">
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
    </div>

    <table class="table table-hover table-inverse">
      <tbody>
         <th>name</th>
    	 <td><%= @user.name %></td>
      <tr>

      <tr>
    	  <th>introduction</th>
    	  <td><%= @user.introduction %></td>
      </tr>
      </tbody>
    </table>
<div class="row">
<%= link_to '', edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>

   <h2>New book</h2>
    <%= form_with model:@book_new, local:true do |f| %>

    <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class:"col-xs-12" %>
    </div>

    <div class="form-group">
    <%=f.label :Opinion, 'Opinion' %>
    <%= f.text_area :body, class:"col-xs-12" %>
    </div>

    <p><%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %></p>

    <% end %>

  </div>
</div>
 <div class="col-xs-9">
   <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
    <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
    </thead>

   <tbody>
   <tr>
      <td>
      <%= link_to user_path(@user) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
        <br /><%= @user.name %>
      <% end %>
      </td>

      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user_id == current_user.id %>
          <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %></td>
      <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に消しますか？" }, class:"btn btn-danger" %>
          <% end %>
      </td>
    </tr>

   </tbody>
   </table>
  </div>
</div>