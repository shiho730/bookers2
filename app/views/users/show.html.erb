
<div class="row">
  <div class="sidebar">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100' %>
    <table class="table table-hover table-inverse">
      <tbody>
      <tr>
         <th>name</th>
    	 <td><%= @user.name %></td>
      <tr>

      <tr>
    	  <th>introduction</th>
    	  <td><%= @user.introduction %></td>
      </tr>
      </tbody>
    </table>

<div class="row">
   <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
</div>

<h2>New book</h2>
  <%= form_with model:@book, url:'/books', local:true do |f| %>

  <div class="form-group">
    <%= f.label :title, 'Title' %>
    <%= f.text_field :title, class:"col-xs-12" %>
  </div>
  <div class="form-group">
    <%=f.label :Opinion, 'Opinion' %>
    <%= f.text_area :body, class:"col-xs-12" %>
  </div>
<%= f.submit 'Create Book', class:"btn btn-primary col-xs-12" %>

  <% end %>
</div>
</div>

<div class="col-xs-9">
 <h2>Books</h2>

 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>

    <% @user.books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %></td>
      <td><%= link_to book.title, book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </thead>
  </table>
  </div>
</div>
